import java.util.*;
public class FloydTriangle{
    public static void F_T(int rows){
         int k = 1;
        for(int i =1;i<=rows;i++){
           
            for(int j=1;j<=i;j++){
                System.out.print("  "+k);
                k++;
            } 
            System.out.println();
            
        }k++;
    }
    public static void main(String args[]){
    Scanner sc = new Scanner(System.in);
    int rows = sc.nextInt();
    F_T(rows);
    }
}
