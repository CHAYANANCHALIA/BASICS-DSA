//conditional statement questions
import java.util.*;
public class csq{ 
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        double temp = sc.nextDouble();
        if(temp>100){
             System.out.print("You have fever");
        }
        else{
             System.out.print("you don't have fever");
        }
    }
 
    
}
